# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=calorie-tracker

# USDA FoodData Central API
# Get your API key at: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your-usda-api-key

# Server Configuration
PORT=3000
NODE_ENV=development

# Server URLs (required for OAuth)
BASE_URL=http://localhost:3000
ISSUER_URL=http://localhost:3000

# Auth0 OAuth Configuration (optional - enables user authentication)
# Create an Auth0 application at: https://manage.auth0.com
# Application Type: Regular Web Application
# Allowed Callback URLs: {BASE_URL}/oauth/callback
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=
